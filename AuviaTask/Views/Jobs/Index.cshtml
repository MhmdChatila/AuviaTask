@model List<AuviaTask.Models.Job>

@{
}

<h1>Jobs List</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Category</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var job in Model)
		{
			<tr>
				<td>@job.Id</td>
				<td>@job.Name</td>
				<td>@job.Category</td>
				<td><a href="Jobs/View/@job.Id" class="btn btn-primary">View</a></td>
			</tr>
		}
	</tbody>
</table>