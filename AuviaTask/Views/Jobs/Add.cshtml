@model AuviaTask.Models.AddJobViewModel

@{
}
<h1>Add Job</h1>
<form method="post" action="Add" class="mt-5">

    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" placeholder="Job Title" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Category</label>
        <input type="text" placeholder="First, Second, or Third" class="form-control" asp-for="Category">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
