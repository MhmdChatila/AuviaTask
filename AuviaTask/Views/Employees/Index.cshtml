@model List<AuviaTask.Models.Employee>
@{
}

<h1>Employee's List</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Birth Date</th>
			<th>Phone</th>
			<th>Employment date</th>
			<th>Personal Photo</th>
			<th>Governorate</th>
			<th>Is Probation</th>
			<th>Is Deleted</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.BirthDate.ToString("dd-mm-yyyy")</td>
				<td>@employee.Phone</td>
				<td>@employee.EmploymentDate.ToString("dd-mm-yyyy")</td>
				<td>@employee.PersonalPhoto</td>
				<td>@employee.Governorate</td>
				<td>@employee.IsProbation</td>
				<td>@employee.IsDeleted</td>
				<td><a href="Employees/View/@employee.Id" class="btn btn-primary">View</a></td>
			</tr>
		}
	</tbody>
</table>